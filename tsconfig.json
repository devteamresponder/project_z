{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Ajustado para ambiente React puro
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Alterado para "react-jsx" (padr√£o para React puro)
    "incremental": true,
    "allowImportingTsExtensions": true, // Habilitado para suportar imports como './App.tsx'
    "paths": {
      "@/*": ["./src/*"] // Mantido para aliases, ajustado para src
    }
  },
  "include": ["**/*.ts", "**/*.tsx"], // Removido "next-env.d.ts" e ".next/types/**/*.ts"
  "exclude": ["node_modules"]
}